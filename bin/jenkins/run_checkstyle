set -o nounset
set -o errexit

PROJECT="checkstyle"
SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
cd "${SCRIPTPATH}/../.."
source bin/jenkins/functions.sh

PROJECT=$( project_name "$@" -d "$PROJECT" )

setup $PROJECT dev

checkstyle_tests $PROJECT && rc=$? || rc=$?

teardown $PROJECT

exit 0
