-block extra_javascript
  GGRC.permissions = ={ permissions_json()|safe };
  GGRC.current_user = ={ current_user_json()|safe };
  GGRC.config = ={ config_json()|safe };
  GGRC.roles =  ={ roles_json()|safe };
  GGRC.custom_attr_defs =  ={ attributes_json()|safe }
