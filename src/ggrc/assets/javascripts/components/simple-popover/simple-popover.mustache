<div class="simple-popover {{extraCssClass}}">
    <div class="simple-popover__button">
        <button class="btn btn-link" ($click)="show">{{buttonText}}</button>
    </div>
    {{#if open}}
    <div class="simple-popover__content" ($click)="hide" ($mouseleave)="hide">
        <content></content>
    </div>
    {{/if}}
</div>