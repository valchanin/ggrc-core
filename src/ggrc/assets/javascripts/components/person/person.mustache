<div class="person">
  {{#if personObj}}
    {{{renderLive '/static/mustache/people/popover.mustache' person=personObj}}}

    <content/>

    {{#if editable}}
    <a href="javascript://" class="unmap" title="Remove">
      <i class="fa fa-trash"></i>
    </a>
    {{/if}}
  {{else}}
    <span class="empty-message">{{emptyText}}</span>
  {{/if}}
</div>
