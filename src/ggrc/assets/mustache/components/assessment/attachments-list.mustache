<h6>Evidence</h6>
<mapped-objects {visible-items}="limit" {parent-instance}="instance" mapping="all_documents" {empty-message}="noItemsText">
    <action-toolbar {document}="instance" class="action-toolbar">
        <document-object-list-item class="action-toolbar__content-item" {instance}="document"></document-object-list-item>
      {{#if showAction}}
        <div class="action-toolbar__controls">
        {{#is_allowed 'update' parentInstance context='for'}}
              <unmap-button {destination}="parentInstance" {source}="document" object-prop="object_documents" mapping-type="ObjectDocument">
                 <action-toolbar-control><i class="fa fa-trash"></i></action-toolbar-control>
              </unmap-button>
        {{/is_allowed}}
        </div>
        {{/if}}
     </action-toolbar>
</mapped-objects>
<div>
{{#if_mapping_ready "audits" instance}}
  {{#is_allowed 'update' instance context='for'}}
    {{{render_hooks "Request.gdrive_evidence_storage"}}}
  {{/is_allowed}}
{{/if_mapping_ready}}
</div>
