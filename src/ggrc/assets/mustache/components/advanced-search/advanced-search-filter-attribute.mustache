<div class="flex-box">
  <div class="flex-box">
    <select {($value)}="attribute@left">
      {{#each availableAttributes}}
      <option value="{{lowercase attr_title}}">{{attr_title}}</option>
      {{/each}}
    </select>
  </div>
  <div class="flex-box">
    <select {($value)}="attribute@op">
      <option value="~">Contains</option>
      <option value="=">Equals</option>
      <option value="!~">Does not contain</option>
      <option value="!=">Is not equal</option>
      <option value="&gt;">Lesser than </option>
      <option value="&lt;">Greater than</option>
    </select>
  </div>
  <div class="flex-box">
    <input tabindex="3" placeholder="Type here..." name="right" type="text" {($value)}="attribute@right">
  </div>
  <div class="flex-box action-cell">
    <button class="remove-filter-item" ($click)="remove()">
        <i class="fa fa-trash"></i>
    </button>
  </div>
</div>



