<div class="flex-box">
  <div class="flex-box attr-cell">
    <input tabindex="1" placeholder="left" name="left" type="text" {($value)}="attribute@left">
  </div>
  <div class="flex-box op-cell">
    <select {($value)}="attribute@op">
      <option value="~">~</option>
      <option value="=">=</option>
      <option value="!~">!~</option>
      <option value="!=">!=</option>
      <option value="&gt;">&gt;</option>
      <option value="&lt;">&lt;</option>
    </select>
  </div>
  <div class="flex-box attr-cell">
    <input tabindex="3" placeholder="right" name="right" type="text" {($value)}="attribute@right">
  </div>
  <div class="flex-box action-cell">
    <button class="btn btn-small btn-red" ($click)="remove()">X</button>
  </div>
</div>



